{#                            <a class="dropdown-item" href="{{ path('seizoen_index') }}">Seizoen</a>#}
                        </div>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link text-white" href="/">Home</a>
                    </li>
                </ul>
            {% endif %}
            <div class="navbar navbar-inverse" role="navigation">
                <div class="blockMain ">
                    {% if app.user %}
                        {% set mainMenu = [
                            {'path': 'fos_user_security_logout', 'name' : 'Logout'}
                        ] %}
                    {% else %}
                        {% set mainMenu = [
                            {'path': 'fos_user_security_login', 'name': 'Login' },
                            {'path': 'fos_user_registration_register', 'name': 'Registreren' }
                        ] %}
                    {% endif %}
                    <div class="navbar-collapse collapse">
                        <a class="nav-link text-white">{{ app.user }}</a>
                        <ul class="nav navbar-nav">
                            {% for item in mainMenu %}
                                <li class="nav-item"{{ app.request.get('_route') == item['path'] ? '
class="active"' : '' }}>
                                    <a class="nav-link text-white"
                                       href="{{ path(item['path']) }}">{{ item['name'] }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div><!--/.navbar-collapse -->
                </div>
            </div>
        </div>
    </nav>
</header>
